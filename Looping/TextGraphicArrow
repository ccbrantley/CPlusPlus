// Text Graphic Arrow
// Creates an arrow shape out of '+'
#include<iostream>
#include <iomanip>
#include <string>
using namespace std;

int main() {
	for (int i = 1; i <= 5; i += 2) {
		string temp(i, '+');
		string tempo(i, ' ');
		cout << setw(7) << tempo << left << temp << endl;
	}
	string tempp(13, '+');
	cout << tempp << endl;
	for (int i = 5; i >= 1; i -= 2) {
		string temp(i, '+');
		string tempo(i, ' ');
		cout << setw(7) << tempo << left << temp << endl;
	}

	system("pause");
	return 0;
	}
