// Text Graphic Diamond
// Out of '+'
#include<iostream>
#include <iomanip>
#include <string>
using namespace std;

int main() {;
	for (int i = 1; i <= 7; i += 2) {
		string temp(i, '+');
		string tempo(i - 1, '+');
		cout << setw(10) << right << temp << tempo << endl;
	}
	for (int i = 5; i >= 1; i -= 2) {
		string temp(i, '+');
		string tempo(i - 1, '+');
		cout << setw(10) << right << temp << tempo << endl;
	}

	
	system("pause");
	return 0;
}
